<p id="notice"></p>
<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3" >
   <% if @new_book.errors.any? %>
    <%= @new_book.errors.count %> errors prohibited this obj from being saved:
     <ul><% @new_book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
     </ul>
    <% end %>
   <% end %>
   <h2>User info</h2>
   <table class="table">
    <tbody>
     <tr><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></tr>
     <tr>
      <th>name</th>
      <th><%= user.name %></th>
     </tr>
     <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
     </tr>
    </tbody>
   </table>
   <div class="row">
    <%= link_to "", edit_user_path(user), class: 'btn btn-secondary fas fa-user-cog' %>
   </div>
   <h2 class="mt-3">New book</h2>
   <%= form_with model: @new_book, url:'/books', local:true do |f| %>
    <div class="field">
     <h4>Title</h4>
     <%= f.text_field :title %>
    </div>
    <div class="field">
     <h4>Opinion</h4>
     <%= f.text_area :body %>
    </div>
    <div class="actions">
     <%= f.submit 'Create Book'%>
    </div>
   <% end %>
  </div>